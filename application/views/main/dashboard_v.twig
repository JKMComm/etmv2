<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                {% include 'common/view-header_v' ~ '.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2 col-xs-6">
                <div class="panel panel-filled">
                    <div class="panel-body">
                        <a href="{{ base_url('contracts/index/' ~ character_id ~ '?aggr=' ~ aggregate ~ '&new=' ~ new_info.contracts) }}" class="no-ul">
                            <h2 class="m-b-none">
                                <i class="pe-7s-id"></i>
                                {{ new_info.contracts }}
                                <span class="slight">
                                    {% if new_info.contracts > 0 %}
                                        <i class='fa fa-play fa-rotate-270 text-warning'></i>
                                    {% endif %}
                                </span>
                            </h2>
                        </a>
                        <div>New Contracts</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-xs-6">
                <div class="panel panel-filled">
                    <div class="panel-body">
                        <a href="{{ base_url('transactions/index/' ~ character_id ~ '?aggr=' ~ aggregate ~ '&new=' ~ new_info.transactions) }}" class="no-ul">
                            <h2 class="m-b-none">
                                <i class="pe-7s-id"></i>
                                {{ new_info.transactions }}
                                <span class="slight">
                                    {% if new_info.transactions > 0 %}
                                        <i class='fa fa-play fa-rotate-270 text-warning'></i>
                                    {% endif %}
                                </span>
                            </h2>
                        </a>
                        <div>New transactions</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-xs-6">
                <div class="panel panel-filled">
                    <div class="panel-body">
                        <a href="{{ base_url('marketorders/index/' ~ character_id ~ '?aggr=' ~ aggregate ~ '&new=' ~ new_info.orders) }}" class="no-ul">
                            <h2 class="m-b-none">
                                <i class="pe-7s-id"></i>
                                {{ new_info.orders }}
                                <span class="slight">
                                    {% if new_info.orders > 0 %}
                                        <i class='fa fa-play fa-rotate-270 text-warning'></i>
                                    {% endif %}
                                </span>
                            </h2>
                        </a>
                        <div>New orders</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-lg-offset-2 col-xs-12">
                <div class="panel panel-filled" style="position:relative;height: 114px">
                    <div style="position: absolute;bottom: 0;left: 0;right: 0">
                        <span class="sparkline" data-profit={{ week_profits }}></span>
                    </div>
                <div class="panel-body">
                    <div class="m-t-sm">
                        <div class="c-white"><span class="label label-accent"></span> Last 7 day profits (all characters)</div>
                        <span class="small c-white">This week: {{ profits_trends['total_week'] | number_format }} ISK
                            <i class="fa fa-play fa-rotate-{{ profits_trends['trend_today'] > 0 ? 270 : 90 }} text-warning"></i>
                            {{ profits_trends['trend_today'] | number_format }} % (today)
                        </span>
                    </div>
                </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-filled">
                    <div class="panel-body">
                        <div class="panel panel-filled panel-c-success panel-collapse mt-20">
                            <div class="dropdown pull-right mr-10 mt-10">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-interval" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    Time Interval
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right dropdown-interval">
                                    <li><a href="#" data-id="1">Last 24 hours</a></li>
                                    <li><a href="#" data-id="3">Last 3 days</a></li>
                                    <li><a href="#" data-id="7">Last 7 days</a></li>
                                </ul>
                            </div>
                            <div class="panel-heading">
                                <h5><i class="fa fa-line-chart"></i> Latest Profits - last <span class="table-interval"></span> day(s)</h5>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="profits-table" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 40%;">Item</th>
                                        <th>System</th>
                                        <th>Date</th>
                                        <th>Q</th>
                                        <th>Profit</th>
                                        <th>Margin</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="panel panel-filled panel-c-success panel-collapse">
                    <div class="panel-heading">
                        <h5><i class="fa fa-pie-chart"></i> Assets Distribution: </h5>
                    </div>
                </div>
                <div id="pie"></div>
            </div>
        </div>
    </div>
</section>

<script src="{{ base_url('dist/js/apps/dashboard-app.js') }}?v={{HASH_CACHE}}"></script>
<script src="{{ base_url('assets/fusioncharts/js/fusioncharts.js') }}?v={{HASH_CACHE}}"></script>