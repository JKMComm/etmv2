<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                {% include 'common/view-header_v' ~ '.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="panel panel-filled panel-c-success panel-main">
                    <div class="panel-heading">
                        Item history from last {{ interval }} days
                        <div class="dropdown pull-right">
                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-interval" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Time Interval
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right dropdown-interval">
                                <li><a data-id="1" href="#">Last 24 hours</a></li>
                                <li><a data-id="7" href="#">Last 7 days</a></li>
                                <li><a data-id="14" href="#">Last 14 days</a></li>
                                <li><a data-id="30" href="#">Last 30 days</a></li>
                                <li><a data-id="60" href="#">Last 2 months</a></li>
                                <li><a data-id="90" href="#">Last 3 months</a></li>
                                <li><a data-id="180" href="#">Last 6 months</a></li>
                                <li><a data-id="365" href="#">Last 12 months</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">
                        <i class="fa fa-info yellow"></i> This page displays a breakdown of a particular item overtime. This includes transactions, volumes and profits <br />
                        <i class="fa fa-info yellow"></i> Broker fees and transaction taxes are already included in final prices. <br />
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-sm-4">
                                <input type="text" class="form-control origin-station" id="item" name="item" placeholder="Search for an item name here" autofocus required>
                                <input type="hidden" name="id" id="id">
                            </div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-submit btn-success btn-search pull-left">Search</button>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="panel panel-filled panel-c-success panel-main">
                    <div class="panel-heading clearfix">
                        <div class="col-sm-3">Item: <span id="item-img" class="pl-5 pr-5"></span><span id="item-name"></span></div>
                        <div class="col-sm-3">Profit today: <span id="profit-today"></span> ( <span id="profit-q-today"></span> units)</div>
                        <div class="col-sm-3">Bought today: <span id="bought-today"></span> ( <span id="bought-q-today"></span> units)</div>
                        <div class="col-sm-3">Sold today: <span id="sold-today"></span> ( <span id="sold-q-today"></span> units)</div>
                    </div>

                    <div class="panel-heading clearfix">
                        <div class="col-sm-3 text-right pr-20"><b>Last {{ interval }} days </b> </div>
                        <div class="col-sm-3">Profit: <span id="profit-interval"></span> ( <span id="profit-q-interval"></span> units)</div>
                        <div class="col-sm-3">Bought: <span id="bought-interval"></span> ( <span id="bought-q-interval"></span> units)</div>
                        <div class="col-sm-3">Sold: <span id="sold-interval"></span> ( <span id="sold-q-interval"></span> units)</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab-1" aria-expanded="true"> Daily snapshot </a></li>
                        <li class=""><a data-toggle="tab" href="#tab-2" aria-expanded="false"> Chart </a></li>
                        <li class=""><a data-toggle="tab" href="#tab-3" aria-expanded="false"> Lifetime stats </a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="tab-content">
            <div id="tab-1" class="tab-pane active">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-filled">
                            <div class="panel-heading">
                                <h2>Daily snapshot</h2>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="snapshot-table">
                                        <thead>
                                            <tr>
                                                <th>Day</th>
                                                <th>Quantity bought</th>
                                                <th>Total ISK in purchases</th>
                                                <th>Quantity sold</th>
                                                <th>Total ISK in sales</th>
                                                <th>Quantity re-sold</th>
                                                <th>Total ISK in profit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="tab-2" class="tab-pane">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-filled">
                            <div class="panel-heading">
                                <div id="chart-profit"></div>
                            </div>
                        </div>
                        <div class="panel panel-filled">
                            <div class="panel-heading">
                                <div id="chart-buy"></div>
                            </div>
                        </div>
                        <div class="panel panel-filled">
                            <div class="panel-heading">
                                <div id="chart-sell"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="tab-3" class="tab-pane">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-filled">
                            <div class="panel-heading">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="{{ base_url('assets/fusioncharts/js/fusioncharts.js') }}?v={{HASH_CACHE}}"></script>
<script src="{{ base_url('dist/js/apps/itemhistory-app.js') }}?v={{HASH_CACHE}}"></script>